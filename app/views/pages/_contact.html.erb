<div class="section white">
  <div class="row container">
    <h4 class="light center">Contact Us!</h4>
    <div class="col s12 m6">
      <div class="card-panel white z-depth-3">
        <%= form_tag(contact_us_path) do %>
            <div class="form-group">
              <%= label_tag 'email', 'Your Email' %>
              <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Your Email Address' %>
            </div>
            <div class="form-group">
              <%= label_tag 'body', 'Content' %>
              <%= text_area_tag 'body', nil, class: 'form-control', rows: 4, placeholder: 'Content...' %>
            </div>
            <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
                Submit
            <% end %>
        <% end %>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card-panel white z-depth-3">
        <p><a href="mailto:paultraders@outlook.com" target="_top"><i class="fa fa-envelope-o fa-2x left"></i>paultraders@outlook.com</a></p>
        <p><a href="https://www.facebook.com/pages/Paul-Walker-Traders-Pakistan/947786915252003?fref=ts" target="_blank"><i class="fa fa-facebook-square fa-2x left"></i>Facebook Page</a></p>
      </div>
    </div>
  </div>
</div>