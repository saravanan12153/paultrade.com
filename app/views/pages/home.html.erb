<div class="parallax-container">
  <div class="parallax"><%= image_tag "cars1.jpg" %></div>
</div>
<div class="section white">
  <div class="row container">
    <h2 class="header">Paul Trade</h2><span class="right"><%= link_to 'See latest cars here', posts_path, class: "waves-effect waves-light btn green" %></span>
    <p class="grey-text text-darken-3 lighten-3">A website to buy used and new cars with affordable and easy money and procedures.</p>
  </div>
  <div class="row container">
    <h4 class="light">Log In or Sign Up for <strong>FREE</strong> to buy cars!</h4>
    <div class="col s12 m6">
      <div class="card-panel white z-depth-3">
        <%= render "devise/shared/login" %>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card-panel white z-depth-3">
        <%= render "devise/shared/signup" %>
      </div>
    </div>
  </div>
</div>
<div class="parallax-container">
  <div class="parallax"><%= image_tag "cars2.jpg" %></div>
</div>


<div class="section white">
  <div class="row container">
    <h4 class="light center">Contact Us!</h4>
    <div class="col s12 m6">
      <div class="card-panel white z-depth-3">
        <%= form_tag(contact_us_path) do %>
            <div class="form-group">
              <%= label_tag 'email', 'Your Email' %>
              <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Your Email Address' %>
            </div>
            <div class="form-group">
              <%= label_tag 'body', 'Content' %>
              <%= text_area_tag 'body', nil, class: 'form-control', rows: 4, placeholder: 'Content...' %>
            </div>
            <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
                Submit
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>