<h2 class="center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'shared/devisemes' %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    <% end -%>

    <div class="card-action">
      <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
          <i class="mdi-social-person left"></i> Log In
      <% end %>
    </div>
<% end %>