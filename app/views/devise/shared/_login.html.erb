<h2 class="center">Log in</h2>
<div class="center">
  <%= link_to '<i class="fa fa-facebook-square left"></i>Log In with Facebook'.html_safe, user_omniauth_authorize_path(:facebook), class: "waves-effect waves-light btn light-blue darken-4" %>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'shared/devisemes' %>
    <div class="input-field">
      <i class="material-icons prefix">email</i>
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, autofocus: true, class: "validate" %>
    </div>

    <div class="input-field">
      <i class="material-icons prefix">security</i>
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, autocomplete: "off", class: "validate" %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    <% end -%>

    <div class="card-action">
      <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
          <i class="material-icons left">person</i> Log In
      <% end %>
    </div>
<% end %>