<li class="collection-item avatar" id="comment_<%= comment.id %>">
  <i class="mdi-communication-comment circle"></i>
  <span class="title blue-text"><%= comment.user.name %></span>
  <p>
    <%= comment.content %>
  </p>
  <p class="grey-text"><%= time_ago_in_words(comment.created_at) %> ago</p>
  <% if comment.user == current_user %>
      <%= link_to '<i class="mdi-action-delete"></i>'.html_safe, post_comment_path(comment.post, comment), method: :delete, class: "secondary-content", remote: true %>
  <% end %>
</li>